# Public base URL for this gateway (no trailing slash)
GATEWAY_BASE_URL=https://gateway.example.org

# Comma-separated EXACT redirect URIs allowed
REDIRECT_ALLOWLIST=https://app.example.org/callback,https://another.example.org/smart/cb

# Placeholder secret for future cookie/session signing
COOKIE_SECRET=change-me

# Placeholder endpoint where the AgenticOS kernel mints OS-scoped tokens
KERNEL_TOKEN_ENDPOINT=https://kernel.example.org/auth/mint

# Optional audience value
KERNEL_AUDIENCE=agenticos-kernel
